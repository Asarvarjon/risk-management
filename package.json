{
  "name": "risk-management",
  "version": "3.0.0",
  "description": "Template for the Learning Journey Building side-by-side extensions on SAP BTP",
  "author": "m.haug@sap.com",
  "license": "SAP SAMPLE CODE LICENSE",
  "repository": "https://github.com/SAP-samples/sap-learning-extension-suite",
  "dependencies": { 
    "@sap-cloud-sdk/core": "^1.54.2",
    "@sap-cloud-sdk/connectivity": "^3.22.2",
    "@sap-cloud-sdk/http-client": "^3.22.2",
    "@sap-cloud-sdk/resilience": "^3.22.2",
    "@sap/cds": "8.6.0",
    "@sap/cds-dk": "8.4.0",
    "express": "^4",
    "sqlite3": "^5.1.7",
    "@cap-js/hana": "^1",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "@sap/ux-specification": "UI5-1.129"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-risk-management": "cds watch --open risk-management/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "API_BUSINESS_PARTNER": {
        "kind": "odata",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "credentials": {
          "destination": "API_BUSINESS_PARTNER"
        }
      },
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db.sqlite"
        }
      },
      "northwind": {
        "kind": "odata-v2",
        "model": "srv/external/northwind",
        "credentials": {
          "destination": "northwind"
        }
      },
      "OnPremiseExpressApp": {
        "kind": "rest",
        "credentials": {
          "destination": "OnPremiseExpressApp"
        }
      },
      "auth": {
        "[development]": {
          "strategy": "mock",
          "users": {
            "risk.viewer@tester.sap.com": {
              "password": "initial",
              "roles": [
                "RiskViewer"
              ]
            },
            "risk.manager@tester.sap.com": {
              "password": "initial",
              "roles": [
                "RiskManager"
              ]
            }
          }
        }
      },
      "[production]": {
        "db": {
          "kind": "hana"
        },
        "auth": {
          "kind": "xsuaa"
        }
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  },
  "sapux": [
    "app/risk-management"
  ]
}
